<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.mikhailm.cloud.storage.client.Controller">
    <VBox>
        <Button  text="Отправить" onAction="#send"/>
        <Button text="Скачать" onAction="#download"/>
        <Button text="Обновить" onAction="#update"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </VBox>
    <TableView fx:id="filesTable" HBox.hgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="fileNameColumn" prefWidth="300" text="Имя"/>
            <TableColumn fx:id="fileSizeColumn" prefWidth="120" text="Размер"/>
        </columns>
    </TableView>
</HBox>